    "compilerOptions": {
        "outDir": "./build",
        "allowJs": true,
        "target": "es5",
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noImplicitAny": true
    },
    "include": [
        "./src/**/*"
    ]
}